#########################
# Flake8 Configuration  #
# (.flake8)             #
#########################
[flake8]
ignore =
    # asserts are ok when testing.
    S101
    # pickle
    S301
    # pickle
    S403
    S404
    S603
    # Line break before binary operator (flake8 is wrong)
    W503
    # Ignore the spaces black puts before columns.
    E203
    # allow path extensions for testing.
    E402
    DAR101
    DAR201
    # flake and pylance disagree on linebreaks in strings.
    N400
    N806
exclude =
    .tox,
    .git,
    __pycache__,
    docs/source/conf.py,
    build,
    dist,
    tests/fixtures/*,
    *.pyc,
    *.bib,
    *.egg-info,
    .cache,
    .eggs,
    data.
max-line-length = 120
max-complexity = 20
import-order-style = pycharm
application-import-names =
    seleqt
    tests